{% extends 'AndresMazzaUserBundle:User:layout.html.twig' %}
{% block body %}

    <h2>Users</h2>
    <table style="border-style:solid;">
        <tr>
            <th>Username</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Created</th>
            <th>Updated</th>
            <th>Action</th>
        </tr>
    {% for user in users if users %}
        <tr>
            <td>{{ user.getUsername }}</td>
            <td>{{ user.getFirstname }}</td>
            <td>{{ user.getLastname }}</td>
            <td>{{ user.getEmail }}</td>
            <td>{{ user.getRole }}</td>
            <td>{{ user.getCreatedAt | date('d-m-Y') }}</td>
            <td>{{ user.getUpdatedAt | date('d-m-Y') }}</td>
            <td>Action</td>
        </tr>
    {% endfor %}
    </table>
{% endblock %}