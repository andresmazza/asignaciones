{% extends 'AndresMazzaUserBundle:User:layout.html.twig' %}
{% block body %}
    {{ parent() }}
<div class="container">
    <div class="col-md-12">
        <div class="page-header margin-none">
            <h2 class="padding-none">Users</h2>
        </div>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <th> {{ 'Username' | trans }}</th>
            <th> {{ 'First name' | trans }}</th>
            <th> {{ 'Last name' | trans }}</th>
            <th> {{ 'Email' | trans }}</th>
            <th> {{ 'Role' | trans }}</th>
            <th> {{ 'Created' | trans }}</th>
            <th> {{ 'Updated' | trans }}</th>
            <th> {{ 'Action' | trans }}</th>
        </thead>
    {% for user in users if users %}
        <tr>
            <td>{{ user.getUsername }}</td>
            <td>{{ user.getFirstname }}</td>
            <td>{{ user.getLastname }}</td>
            <td>{{ user.getEmail }}</td>
            <td>{{ user.getRole }}</td>
            <td>{{ user.getCreatedAt | date('d-m-Y') }}</td>
            <td>{{ user.getUpdatedAt | date('d-m-Y') }}</td>
            <td class="actions">
                <a href="#" class="btn btn-sm btn-info"> {{ 'view' | trans }}</a>
                <a href="#" class="btn btn-sm btn-primary">{{ 'edit' | trans }}</a>
                <a href="#" class="btn btn-sm btn-danger btn-delete">{{ 'delete' | trans }}</a>
            </td>
        </tr>
    {% endfor %}
    </table>
</div>
    </div>
</div>

{% endblock %}