{% extends 'AndresMazzaUserBundle:User:layout.html.twig' %}
{% block body %}
    {{ parent() }}
<div class="container">
    <div class="col-md-12">
        <div class="page-header margin-none">
            <h2 class="padding-none">Users</h2>
        </div>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <th>Username</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Created</th>
            <th>Updated</th>
            <th>Action</th>
        </thead>
    {% for user in users if users %}
        <tr>
            <td>{{ user.getUsername }}</td>
            <td>{{ user.getFirstname }}</td>
            <td>{{ user.getLastname }}</td>
            <td>{{ user.getEmail }}</td>
            <td>{{ user.getRole }}</td>
            <td>{{ user.getCreatedAt | date('d-m-Y') }}</td>
            <td>{{ user.getUpdatedAt | date('d-m-Y') }}</td>
            <td class="actions">
                <a href="#" class="btn btn-sm btn-info">view</a>
                <a href="#" class="btn btn-sm btn-primary">edit</a>
                <a href="#" class="btn btn-sm btn-danger btn-delete">delete</a>
            </td>
        </tr>
    {% endfor %}
    </table>
</div>
    </div>
</div>

{% endblock %}